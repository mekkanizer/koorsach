#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;

String to_string(int input) {
	String result="";
	while (input>0) {
		result = (char)(input%10) + result;
		input/=10;
	}
	return result;
}

String str_rand(int l) {
	srand(time(NULL));
	int i;
	String str="";
	switch (l) {
		case 1: //sex
			rand()%2 ? str = 'm' : str = 'f';
		break;
		case 6: // t_bilet
			switch (rand()%3) {
				case 0: str = "econom"; break;
				case 1: str = "busine"; break;
				case 2: str = "first"; break;
			}
		break;
		case 4: //name
		case 7: //surname
		case 8: //middlename
		case 9: //destination
			str += (char)(rand()%26+65);
			for (i=1; i<l; i++)
				str += (char)(rand()%26+97);
		break;
		case 2: //ser_pasp
		case 5: //n pasp; pass; flight; plane;
			for (i=0; i<l; i++)
				str += (char)(rand()%26+48);
		break;
		case 10: //date
			str = str + to_string(rand()%30+1960) + to_string(rand()%12+1) + to_string(rand()%28+1);
		break;
		case 0: // plane type
			switch (rand()%5) {
				case 0: str = "700"; break; //"BOING"
				case 1: str = "500"; break; //"AIRBUS"
				case 2: str = "40"; break; //"YAK"
				case 3: str = "300"; break; //"TU"
				case 4: str = "80"; break; //"IL"
			}
		break;
	}
	return str;
}

//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------

void __fastcall TForm1::RadioButton1Click(TObject *Sender)
{
	ADOQuery1->Active = false;
	ADOQuery1->SQL->Clear();
	ADOQuery1->SQL->Text = "SELECT * FROM Билеты";
	ADOQuery1->Active = true;
}
//---------------------------------------------------------------------------
