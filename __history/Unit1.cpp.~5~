//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------

void __fastcall TForm1::RadioButton1Click(TObject *Sender)
{
	ADOQuery1->Active = false;
	ADOQuery1->SQL->Clear();
	ADOQuery1->SQL->Text = "SELECT * FROM Билеты";
	ADOQuery1->Active = true;
	Form1->curr_table = 1;
}
//---------------------------------------------------------------------------
void __fastcall TForm1::RadioButton2Click(TObject *Sender)
{
	ADOQuery1->Active = false;
	ADOQuery1->SQL->Clear();
	ADOQuery1->SQL->Text = "SELECT * FROM Пассажиры";
	ADOQuery1->Active = true;
	Form1->curr_table = 2;
}
//---------------------------------------------------------------------------

void __fastcall TForm1::RadioButton3Click(TObject *Sender)
{
	ADOQuery1->Active = false;
	ADOQuery1->SQL->Clear();
	ADOQuery1->SQL->Text = "SELECT * FROM Рейсы";
	ADOQuery1->Active = true;
	Form1->curr_table = 3;
}
//---------------------------------------------------------------------------

void __fastcall TForm1::RadioButton4Click(TObject *Sender)
{
	ADOQuery1->Active = false;
	ADOQuery1->SQL->Clear();
	ADOQuery1->SQL->Text = "SELECT * FROM Самолеты";
	ADOQuery1->Active = true;
	Form1->curr_table = 4;
}
//---------------------------------------------------------------------------

void __fastcall TForm1::add_randClick(TObject *Sender)
{
	//srand(time(NULL));
	switch (curr_table) {
		case 1:
			ADOQuery1->Append();
			ADOQuery1->Last();
			ADOQuery1->Edit();
			ADOQuery1->FieldByName("Номер_билета")->AsString = IntToStr(ADOQuery1->RecordCount+1);
			ADOQuery1->Post();
		break;
	}
}
//---------------------------------------------------------------------------

void __fastcall TForm1::FormCreate(TObject *Sender)
{
	curr_table = 1;
}
//---------------------------------------------------------------------------

